{
    "name": "hugin-messenger",
    "author": "Kryptokrona Developers",
    "productName": "Hugin Messenger",
    "version": "0.0.1",
    "private": true,
    "description": "A messenger app built on top of the kryptokrona blockchain",
    "main": "src/electron.cjs",
    "type": "module",
    "repository": "https://github.com/kryptokrona/hugin-svelte",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev npm run dev:all",
        "dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
        "dev:svelte": "vite dev",
        "dev:electron": "electron src/electron.cjs",
        "build": "cross-env NODE_ENV=production npm run build:svelte && npm run build:electron",
        "build:svelte": "vite build",
        "build:electron": "electron-builder --x64 --win --config build.config.json ",
        "build:mac-arm": "cross-env NODE_ENV=production vite build && electron-builder --mac --arm64 --config build.config.json",
        "build:mac-intel": "cross-env NODE_ENV=production vite build && electron-builder --mac --x64 --config build.config.json",
        "publish:mac-arm": "cross-env NODE_ENV=production vite build && electron-builder --mac --arm64 --config build.config.json -p always",
        "publish:mac-intel": "cross-env NODE_ENV=production vite build && electron-builder --mac --x64 --config build.config.json -p always",
        "publish:linux": "cross-env NODE_ENV=production vite build && electron-builder --linux --config build.config.json",
        "start": "vite start"
    },
    "build": {
        "publish": [
            {
                "provider": "github",
                "owner": "kryptokrona",
                "repo": "hugin-svelte"
            }
        ],
        "mac": {
            "asarUnpack": "./node_modules/node-notifier/vendor/**"
        }
    },
    "browserslist": [
        "Chrome 89"
    ],
    "dependencies": {
        "@commonify/lowdb": "^3.0.0",
        "@koush/wrtc": "^0.5.3",
        "@neodrag/svelte": "^1.2.3",
        "app-root-dir": "^1.0.2",
        "auto-launch": "^5.0.5",
        "electron-context-menu": "^2.5.2",
        "electron-fetch": "^1.7.4",
        "electron-reloader": "^1.2.3",
        "electron-serve": "^1.1.0",
        "electron-updater": "4.6.5",
        "electron-window-state": "^5.0.3",
        "hugin-crypto": "^0.0.2",
        "identicon.js": "^2.3.3",
        "int-encoder": "^1.1.1",
        "int-to-rgb": "^1.0.0",
        "kryptokrona-crypto": "^1.0.0",
        "kryptokrona-utils": "^1.3.6",
        "kryptokrona-wallet-backend-js": "^2.4.2",
        "node-notifier": "^10.0.1",
        "node-pre-gyp": "^0.17.0",
        "sanitize-html": "^2.7.0",
        "simple-peer": "^9.11.1",
        "sqlite3": "^5.0.8",
        "svelte-emoji-selector": "^1.0.1",
        "svelte-file-dropzone": "^1.0.0",
        "svelte-loading-spinners": "^0.1.7",
        "tweetnacl": "^1.0.3",
        "tweetnacl-sealed-box": "^1.0.5",
        "tweetnacl-util": "^0.15.1",
        "webtorrent": "^1.8.26"
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "next",
        "@sveltejs/kit": "next",
        "@types/electron-window-state": "^2.0.34",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "@zerodevx/svelte-toast": "^0.7.1",
        "concurrently": "^6.5.1",
        "cross-env": "^7.0.3",
        "dotenv": "^8.6.0",
        "electron": "^19.0.8",
        "electron-builder": "^23.1.0",
        "electron-connect": "^0.6.3",
        "electron-packager": "^15.4.0",
        "electron-updater": "^4.6.5",
        "eslint": "^7.32.0",
        "eslint-plugin-svelte": "^1.1.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.6.0",
        "sass": "^1.50.0",
        "svelte": "^3.46.4",
        "svelte-check": "^1.6.0",
        "svelte-preprocess": "^4.10.4",
        "svelte-time": "^0.7.1",
        "typescript": "^4.6.2",
        "vite": "^3.1.1"
    }
}